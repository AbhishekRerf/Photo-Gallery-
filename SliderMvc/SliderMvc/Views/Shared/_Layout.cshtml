
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/slider")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery.bxslider.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Photo Gallery", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Wallpapers", "Wallpapers", new { category = "Wallpapers" })</li>
                   

                    <li>@Html.ActionLink("Contests", "Contests", "Home")</li>
                    <li> @Html.ActionLink("Mobile Clicks", "Image", new { category = "Mobile Clicks" })</li>
                    <li> @Html.ActionLink("About Us", "About", "Home")</li>
                    <li> @Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li> @Html.ActionLink("Community", "Community")</li>
                    @if (Session["UserId"] == null)
                    {
                        <li> @Html.ActionLink("Sign Up", "Signup", "Home")</li>
                        <li>@Html.ActionLink("Log In", "login", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "logout", "Home")</li>
                        int temp = Convert.ToInt32(TempData["Flag"]);
                        if (temp == 1)
                        {
                            <li>@Html.ActionLink("Dashboard", "AdminDashBoard", "Home")</li>

                            <li style="color:white;padding:15px 0 0 30px"> Hello @Session["User_Name"]</li>
                            TempData["Flag"] = 1;
                        }
                        else
                        {
                            <li>@Html.ActionLink("Dashboard", "DashBoard", "Home")</li>
                            <li style="color:white;padding:15px 0 0 30px"> Hello @Session["User_Name"]</li>
                        }

                    }

                </ul>
            </div>
        </div>
    </div>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

            .topnav .icon {
                display: none;
            }

        @@media screen and (max-width: 600px) {
            .topnav a:not(:first-child) {
                display: none;
            }

            .topnav a.icon {
                float: right;
                display: block;
            }
        }

        @@media screen and (max-width: 600px) {
            .topnav.responsive {
                position: relative;
            }

                .topnav.responsive .icon {
                    position: absolute;
                    right: 0;
                    top: 0;
                }

                .topnav.responsive a {
                    float: none;
                    display: block;
                    text-align: left;
                }
        }
    </style>
    <div class="topnav" id="myTopnav">
        @Html.ActionLink("Nature", "Image", new { category = "Nature" })
        @Html.ActionLink("Animals","Image", new { category = "Animals" })
        @Html.ActionLink("Foods","Image", new { category = "Foods" })
        @Html.ActionLink("Birds", "Image", new { category = "Birds" })
        @Html.ActionLink("Gods", "Image", new { category = "Gods" })
        @Html.ActionLink("Sea","Image", new { category = "Sea" })
        @Html.ActionLink("Sky", "Image", new { category = "Sky" })
        @Html.ActionLink("Portraits","Image", new { category = "Portraits" })
        @Html.ActionLink("Black And White","Image", new { category = "Black And White" })
        @Html.ActionLink("Cars", "Image", new { category = "Cars" })
        @Html.ActionLink("Architectural", "Image", new { category = "Architectural" })
        @Html.ActionLink("Festivals", "Image", new { category = "Festivals" })
        @Html.ActionLink("Cricketers", "Image", new { category = "Cricketers" })
        @Html.ActionLink("City", "Image", new { category = "City" })
        @Html.ActionLink("Village", "Image", new { category = "Village" })
        @Html.ActionLink("Technology", "Image", new { category = "Technology" })
        @Html.ActionLink("Forest", "Image", new { category = "Forest" })
        @Html.ActionLink("Historic", "Image", new { category = "Historic" })
        @Html.ActionLink("Actors", "Image", new { category = "Actors" })
        @Html.ActionLink("Footballer", "Image", new { category = "Footballer" })
        @Html.ActionLink("Others", "Image", new { category = "Others" })
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>



    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>

    <div class="container body-content">
        @RenderBody()
        <hr class="new1">
    </div>

    <div class="footer">
        <br />
        <div class="nav-footer">
            <ul>
                
                @Html.ActionLink("Privacy Policy", "Privacypolicy", "Home")
                @Html.ActionLink("About Us", "About", "Home")
                @Html.ActionLink("Contact Us", "Contact", "Home")
            </ul>
        </div>
        <h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &copy; @DateTime.Now.Year -PHOTO GALLERY, Designed Using ASP.NET MVC</h2>
        <br />
    </div>



    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    .footer {
        padding: 0px;
        width: 100%;
        text-align: center;
        background: #ddd;
    }

    hr.new1 {
        border-top: 1px solid black;
    }

    .nav-footer {
        overflow: hidden;
        align-content: center;
    }

        /* Style the navigation bar links */
        .nav-footer a {
            text-align: center;
            font-size: 20px;
            color: black;
            text-align: center;
            padding: 0px 0px;
            text-decoration: none;
            margin-left: 20px;
        }
            /* Change color on hover */
            .nav-footer a:hover {
                background-color: #ddd;
                color: red;
            }
</style>